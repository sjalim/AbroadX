<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Team</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/team.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
</head>
<body>
<!-- Nav Bar -->
<%- include("navbar") -%>

<!-- Team -->
<section id="team">
    <div class="container">
        <h2>Our Team -</h2>
        <div class="row row-flex">
            <% listOfMembers.forEach(function (member) { %>

                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="team-member">
                        <div class="bg-white">
                            <img src="http://localhost:5000/img/team/<%= member.memberImage %>" alt="" class="team-img">
                            <h5><%= member.memberName %></h5>
                            <p class="text-uppercase text-muted designation"><%= member.memberDesignation %></p>
                            <div class="social-links">
                                <a href="<%= member.fbId %>" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                <a href="<%= member.githubId %>" target="_blank"><i class="fab fa-github" aria-hidden="true"></i></a>
                                <a href="<%= member.linkedinId %>" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <% }) %>
        </div>
    </div>

</section>

<!-- Footer section -->
<%- include("footer") -%>


<!-- jQuery Here -->
<script src="/assets/bootstrap/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</body>
</html>