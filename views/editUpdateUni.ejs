<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="/css/editUpdateUni.css">
    <link rel="stylesheet" href="/css/admin.css">

    <script src="https://kit.fontawesome.com/89de733934.js" crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>


<input type="checkbox" id="check">
<label for="check">
    <i class="fas fa-bars" id="btn"></i>
    <i class="fas fa-times" id="cancel"></i>
</label>
<div class="sidebar" style="margin-top: -25px">
    <header>AbroadX</header>
    <ul>
        <li><a href="/admin"><i class="fas fa-qrcode"></i>Dashboard</a></li>
        <li><a href="/admin/uniAdmissionAdminEdit"><i class="fas fa-edit"></i>Edit Uni-Admission</a></li>
        <li><a href="/admin/uniAdmissionAdminAdd"><i class="fas fa-plus"></i>Add Uni-Admission</a></li>
        <li><a href="/admin/otherAddition"><i class="fas fa-calendar-week">Other Addition</i></a></li>
        <li><a href="/admin/blog_admin"><i class="fab fa-blogger-b"></i>Blog</a></li>
        <li><a href="/admin/scholarship_admin"><i class="fas fa-funnel-dollar"></i>Scholarship</a></li>
        <li><a href="/admin/team_admin"><i class="fas fa-users"></i>Team</a></li>
        <li><a href="/admin/edit_aboutUs"><i class="fas fa-address-card"></i>Edit About Us</a></li>

    </ul>
</div>

<section>


    <div class="container body_section" id="update_section">
        <form action="/update_subject/<%= result.subject_id%>/<%= result.level%>" method="post" enctype="multipart/form-data" id="update_form">

            <div>
                <label>Id:</label>
                <h5 class="subject_id"><%= result.subject_id%></h5>
            </div>

            <div class="form-group">
                <label for="level">Level:</label>
                <br>
                <select name="level" class="form-control">
                    <option value="0" <% if(result.level === 'Bachelor') {%> selected  <% }%>>Bachelor</option>
                    <option value="1"  <% if(result.level === 'Master') {%> selected  <% }%>>Master</option>
                    <option value="2"  <% if(result.level === 'PhD') {%> selected  <% }%>>PhD</option>
                </select>
            </div>
            <div class="form-group">
                <label for="area">Area:</label>
                <br>
                <select name="area" class="form-control">
                    <%for(var i=0; i<areaList.length; i++){ %>
                        <option value="<%= areaList[i].name %>" <% if(areaList[i].name === result.area) {%> selected <% }%> > <%= areaList[i].name %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="university">University:</label>
                <br>
                <select name="university" class="form-control">
                    <%for(var i=0; i<uniList.length; i++){ %>
                        <option value="<%= uniList[i].name %>" <% if(uniList[i].name === result.university) {%> selected <% }%> > <%= uniList[i].name %></option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <label for="subject">Subject:</label>
                <br>
                <input type="text" name="subject" class="form-control" value="<%= result.subject%>">
            </div>
            <div class="form-group">
                <label for="post">Post:</label>
                <br>
                <textarea name="post" class="form-control"><%= result.post%></textarea>
            </div>
            <div class="form-group">
                <label for="date">Application Deadline:</label>
                <br>
                <input type="date" name="date" class="form-control" value="<%= result.application_deadline%>">
            </div>
            <div class="form-group">
                <label for="formal_prereq">Formal Prerequisite:</label>
                <br>
                <textarea name="formal_prereq" class="form-control"><%= result.formal_prereq%></textarea>
            </div>
            <div class="form-group">
                <label for="tuition_fee">Tuition:</label>
                <br>
                <textarea name="tuition_fee" class="form-control"><%= result.tuition_fee%></textarea>
            </div>
            <div class="form-group">
                <label for="degree_level">Degree Level:</label>
                <br>
                <input type="text" name="degree_level" class="form-control" value="<%= result.degree_level%>">
            </div>
            <div class="form-group">
                <label for="city">City:</label>
                <br> <input type="text" name="city" class="form-control" value="<%= result.city%>">
            </div>
            <div class="form-group">
                <label for="credit">Credit:</label>
                <br>
                <input type="number" name="credit" class="form-control" value="<%= result.credit%>">
            </div>
            <div class="form-group">
                <label for="language">Language:</label>
                <br>
                <input type="text" name="language" class="form-control" value="<%= result.language%>">
            </div>

<!--            <a href="/update_subject/<%= /*result.subject_id%>/<%= result.level*/%>" class="save_button btn-secondary"> Save</a>-->

            <button type="submit" class="save_button btn-secondary">Save</button>
            <a href="/admin/uniAdmissionAdminEdit" id="cancel_button" class="btn-secondary">Cancel</a>




        </form>
    </div>
</section>



</body>
</html>
