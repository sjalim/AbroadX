<div class="container profile-body">
    <div class="row">
        <div class="col-12 col-sm-4">
            <div class="card">
                <div class="avatar-ctn">
                    <img src="/img/profile.png" class="profile-pic" alt="profile-img">
                </div>
                <button type="button" class="btn btn-outline-secondary">Change Profile Picture</button>
                <button class="btn" data-toggle="button" aria-pressed="false" autocomplete="off"><i class="fa fa-edit"></i>Edit</button>
            </div>
        </div>

        <div class="col-12 col-sm-8">
            <div class="card">
                <div class="show">
                    <label class="d-inline">Name:</label>
                    <h4 id="name-show" class="d-inline">{{user.name}}</h4>
                </div>

                <div class="edit">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="name" value={{user.name}}>
                    </div>

                </div>

                <div class="show">
                    <label class="d-inline">Email:</label>
                    <h4 id="email-show" class="d-inline">{{user.email}}</h4>
                </div>

                <div class="edit">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="email"  value={{user.email}}>
                    </div>

                </div><div class="show">

                <label class="d-inline">Phone:</label>
                <h4 id="name-show" class="d-inline">{{user.phone}}</h4>
            </div>

                <div class="edit">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Phone</span>
                        </div>
                        <div class="btn-group">
